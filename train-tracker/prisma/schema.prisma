generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  fullName  String
  email     String   @unique
  password  String
  role      String   @default("user")  // "user" or "admin"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
  @@index([role])
}

model ContactRequest {
  id            String   @id @default(cuid())
  category      String
  hasTicket     Boolean
  referenceCode String?
  message       String
  attachmentUrl String?
  fullName      String
  email         String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([email])
  @@index([category])
  @@index([createdAt])
}

model AuditEvent {
  id         String   @id @default(cuid())
  eventType  String
  entityType String
  entityId   String
  meta       Json?
  createdAt  DateTime @default(now())

  @@index([eventType])
  @@index([entityType])
  @@index([createdAt])
}

model File {
  id           String   @id @default(cuid())
  originalName String   // Original file name uploaded by user
  s3Key        String   @unique // S3 object key/path
  s3Url        String   // S3 public or signed URL
  fileSize     Int      // File size in bytes
  mimeType     String   // MIME type (e.g., image/jpeg)
  checksum     String?  // Optional: MD5 or SHA256 hash for integrity verification
  
  // File metadata
  categories   String[] @default([])  // e.g., ["avatar"], ["document", "invoice"]
  tags         String[] @default([])  // e.g., ["validated", "archived"]
  metadata     Json?    // Additional metadata (width, height for images, etc.)
  
  // Upload info
  uploadedBy   String   // User ID who uploaded the file
  uploadedAt   DateTime @default(now())
  expiresAt    DateTime? // Optional: when file should be deleted
  
  // Tracking
  isPublic     Boolean  @default(false)  // Whether file is publicly accessible
  downloadUrl  String?  // Pre-signed download URL
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([uploadedBy])
  @@index([uploadedAt])
  @@index([expiresAt])
  @@index([isPublic])
  @@index([s3Key])
}

model EmailLog {
  id           String   @id @default(cuid())
  provider     String   // AWS_SES, SENDGRID
  to           String
  subject      String
  templateName String?
  status       String   // sent, failed
  messageId    String?
  errorMessage String?
  metadata     Json?
  sentBy       String
  createdAt    DateTime @default(now())

  @@index([provider])
  @@index([to])
  @@index([status])
  @@index([createdAt])
}

