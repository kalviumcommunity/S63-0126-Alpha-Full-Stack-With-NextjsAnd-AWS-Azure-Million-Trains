# =============================================================================
# Train Tracker Environment Configuration
# =============================================================================
# Copy this file to .env.local for local development
# Never commit .env files with real credentials to git
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Choose ONE of the following database configurations:

# Option 1: Local PostgreSQL (Docker or native)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/traintracker?schema=public"

# Option 2: AWS RDS PostgreSQL
# DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@train-tracker-db-prod.xxxxx.us-east-1.rds.amazonaws.com:5432/traintracker?schema=public&sslmode=require&connection_limit=10"

# Option 3: Azure PostgreSQL Flexible Server
# Note: Username format must be "username@servername" (URL-encoded as %40)
# DATABASE_URL="postgresql://pgadmin%40train-tracker-db-prod:YOUR_PASSWORD@train-tracker-db-prod.postgres.database.azure.com:5432/traintracker?schema=public&sslmode=require&connection_limit=10"

# Option 4: Supabase PostgreSQL
# DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.xxxxx.supabase.co:5432/postgres?schema=public&sslmode=require"

# Direct URL (for migrations when using connection pooling)
# Required if using PgBouncer or RDS Proxy
# DIRECT_DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@endpoint:5432/traintracker"

# -----------------------------------------------------------------------------
# JWT & Authentication
# -----------------------------------------------------------------------------
# Generate secure random strings:
# - Node: require('crypto').randomBytes(64).toString('hex')
# - OpenSSL: openssl rand -hex 64
# - Online: https://generate-random.org/api-key-generator

JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"

# JWT Expiration Times
JWT_EXPIRES_IN="15m"          # Access token: 15 minutes
JWT_REFRESH_EXPIRES_IN="7d"   # Refresh token: 7 days

# -----------------------------------------------------------------------------
# Next.js Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-change-this"

# -----------------------------------------------------------------------------
# RapidAPI Configuration (IRCTC Train Data)
# -----------------------------------------------------------------------------
# Get your API key from: https://rapidapi.com/
RAPIDAPI_KEY="your-rapidapi-key-here"
RAPIDAPI_HOST="irctc1.p.rapidapi.com"

# Optional: Override specific endpoints (uncomment if needed)
# RAPIDAPI_LIVE_STATUS_URL="https://irctc1.p.rapidapi.com/api/v1/liveTrainStatus"
# RAPIDAPI_SEARCH_STATION_URL="https://irctc1.p.rapidapi.com/api/v1/searchStation"
# RAPIDAPI_TRAINS_BETWEEN_URL="https://irctc1.p.rapidapi.com/api/v3/trainBetweenStations"
# RAPIDAPI_SEARCH_TRAIN_URL="https://irctc1.p.rapidapi.com/api/v1/searchTrain"
# RAPIDAPI_TRAIN_SCHEDULE_URL="https://irctc1.p.rapidapi.com/api/v1/getTrainSchedule"
# RAPIDAPI_PNR_STATUS_URL="https://irctc1.p.rapidapi.com/api/v3/getPNRStatus"
# RAPIDAPI_SEAT_AVAILABILITY_URL="https://irctc1.p.rapidapi.com/api/v1/checkSeatAvailability"
# RAPIDAPI_SEAT_AVAILABILITY_V2_URL="https://irctc1.p.rapidapi.com/api/v2/checkSeatAvailability"
# RAPIDAPI_TRAIN_CLASSES_URL="https://irctc1.p.rapidapi.com/api/v1/getTrainClasses"
# RAPIDAPI_FARE_URL="https://irctc1.p.rapidapi.com/api/v1/getFare"
# RAPIDAPI_TRAINS_BY_STATION_URL="https://irctc1.p.rapidapi.com/api/v1/getTrainsByStation"
# RAPIDAPI_LIVE_STATION_URL="https://irctc1.p.rapidapi.com/api/v1/getLiveStation"

# -----------------------------------------------------------------------------
# AWS Configuration (if using AWS services)
# -----------------------------------------------------------------------------
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"

# AWS S3 (for file uploads)
# AWS_S3_BUCKET="train-tracker-uploads"
# AWS_S3_REGION="us-east-1"

# AWS SES (for email sending)
# AWS_SES_REGION="us-east-1"
# AWS_SES_FROM_EMAIL="noreply@yourdomain.com"

# AWS Systems Manager Parameter Store (for secrets)
# Use AWS SSM Parameter Store instead of env vars in production

# -----------------------------------------------------------------------------
# Azure Configuration (if using Azure services)
# -----------------------------------------------------------------------------
# AZURE_TENANT_ID="your-tenant-id"
# AZURE_CLIENT_ID="your-client-id"
# AZURE_CLIENT_SECRET="your-client-secret"

# Azure Blob Storage (for file uploads)
# AZURE_STORAGE_ACCOUNT_NAME="traintracker"
# AZURE_STORAGE_ACCOUNT_KEY="your-storage-key"
# AZURE_STORAGE_CONTAINER="uploads"

# Azure Key Vault (for secrets)
# AZURE_KEY_VAULT_NAME="train-tracker-kv"

# -----------------------------------------------------------------------------
# Email Configuration (Optional)
# -----------------------------------------------------------------------------
# SMTP Configuration
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# SMTP_FROM="Train Tracker <noreply@traintracker.com>"

# SendGrid (alternative)
# SENDGRID_API_KEY="your-sendgrid-api-key"

# -----------------------------------------------------------------------------
# Redis Configuration (Optional - for caching)
# -----------------------------------------------------------------------------
# REDIS_URL="redis://localhost:6379"
# REDIS_PASSWORD="your-redis-password"

# Upstash Redis (serverless)
# UPSTASH_REDIS_REST_URL="https://xxxxx.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="your-token"

# -----------------------------------------------------------------------------
# Monitoring & Analytics (Optional)
# -----------------------------------------------------------------------------
# Sentry (error tracking)
# SENTRY_DSN="https://xxxxx@sentry.io/xxxxx"

# Google Analytics
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# PostHog (product analytics)
# NEXT_PUBLIC_POSTHOG_KEY="phc_xxxxx"
# NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
# FEATURE_RBAC_ENABLED="true"
# FEATURE_INPUT_SANITIZATION="true"
# FEATURE_HTTPS_HEADERS="true"
# FEATURE_FILE_UPLOADS="false"

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------
# Enable detailed logging
# DEBUG="prisma:query"
# LOG_LEVEL="debug"  # trace, debug, info, warn, error

# Prisma Studio
# PRISMA_STUDIO_PORT="5555"

