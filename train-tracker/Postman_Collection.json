  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Signup",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('userId', jsonData.data.id);",
                  "    pm.environment.set('userEmail', jsonData.data.email);",
                  "    pm.test('Signup successful', function () {",
                  "        pm.expect(jsonData.success).to.be.true;",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Test User\",\n  \"email\": \"testuser{{$timestamp}}@example.com\",\n  \"password\": \"TestPassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "signup"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.test('Login successful', function () {",
                  "        pm.expect(jsonData.success).to.be.true;",
                  "        pm.expect(jsonData.data.id).to.exist;",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"TestPassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Logout",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.test('Logout successful', function () {",
                  "        pm.expect(jsonData.success).to.be.true;",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Trains",
      "item": [
        {
          "name": "Search Trains - Basic",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.test('Search returns success', function () {",
                  "        pm.expect(jsonData.success).to.be.true;",
                  "    });",
                  "    pm.test('Pagination metadata exists', function () {",
                  "        pm.expect(jsonData.meta).to.have.property('page');",
                  "        pm.expect(jsonData.meta).to.have.property('limit');",
                  "        pm.expect(jsonData.meta).to.have.property('total');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/trains/search?query=Mumbai",
              "host": ["{{baseUrl}}"],
              "path": ["api", "trains", "search"],
              "query": [
                {
                  "key": "query",
                  "value": "Mumbai"
                }
              ]
            }
          }
        },
        {
          "name": "Search Trains - With Pagination",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.test('Pagination parameters applied', function () {",
                  "        pm.expect(jsonData.meta.page).to.equal(1);",
                  "        pm.expect(jsonData.meta.limit).to.equal(5);",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/trains/search?query=Rajdhani&page=1&limit=5",
              "host": ["{{baseUrl}}"],
              "path": ["api", "trains", "search"],
              "query": [
                {
                  "key": "query",
                  "value": "Rajdhani"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            }
          }
        },
        {
          "name": "Search Trains - Empty Query",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 400) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.test('Validation error returned', function () {",
                  "        pm.expect(jsonData.success).to.be.false;",
                  "        pm.expect(jsonData.meta.validationErrors).to.exist;",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/trains/search",
              "host": ["{{baseUrl}}"],
              "path": ["api", "trains", "search"]
            }
          }
        }
      ]
    },
